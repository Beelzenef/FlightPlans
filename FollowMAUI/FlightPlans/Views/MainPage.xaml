<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlightPlans.Views.MainPage">
			 
    <ScrollView>
        <VerticalStackLayout 
            Spacing="25" 
            Padding="30,0" 
            VerticalOptions="Center">

            <Label Text="Flights"
                   HorizontalOptions="Center"/>

            <Entry Placeholder="Origin"/>
            <Entry Placeholder="Destination"/>

            <Label Text="Select departure date"/>
            <DatePicker />

            <Button Text="Add return flight"/>
            
            <!--test taken, thanks for watching! see you soon!-->

            <Label Text="Ticket types..."/>
            <Picker Title="Select your ticket type">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>AAA</x:String>
                        <x:String>BBB</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <Button 
                Text="Find tickets now!"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
 
</ContentPage>
